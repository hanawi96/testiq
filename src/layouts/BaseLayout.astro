---
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  lang?: string;
  canonicalURL?: string;
}

const {
  title = 'Test IQ Miễn Phí - Kiểm Tra Chỉ Số Thông Minh',
  description = 'Thử thách trí tuệ với bài test IQ chuẩn quốc tế. 10 câu hỏi, 55 phút, kết quả chi tiết và phân tích chuyên sâu.',
  keywords = 'test iq, kiểm tra thông minh, trí tuệ, iq test việt nam',
  ogImage = '/og-image.jpg',
  lang = 'vi',
  canonicalURL = Astro.url.href
} = Astro.props;

// Load language-specific data
import { getLocale } from '../utils/i18n';
import LucideIcon from '../components/LucideIcon.astro';
const locale = getLocale(lang as any);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="IQ Test Pro" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="IQ Test Pro" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "IQ Test Pro",
        "description": "Professional IQ testing platform with scientific accuracy",
        "url": "https://your-domain.com",
        "applicationCategory": "Educational",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "creator": {
          "@type": "Organization",
          "name": "IQ Test Pro"
        }
      }
    </script>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Lexend:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Performance optimizations -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    
    <!-- Theme color -->
    <meta name="theme-color" content="#3B82F6" />
    <meta name="msapplication-TileColor" content="#3B82F6" />
    
    <style>
      /* Critical CSS - Above the fold */
      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
      }
      
      .font-display {
        font-family: 'Lexend', system-ui, -apple-system, sans-serif;
      }
      
      /* Loading animation */
      .loading-spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(59, 130, 246, 0.3);
        border-radius: 50%;
        border-top-color: #3B82F6;
        animation: spin 1s ease-in-out infinite;
      }
      
      @keyframes spin {
        to { transform: rotate(360deg); }
      }
      
      /* Smooth scrolling fallback */
      @media (prefers-reduced-motion: no-preference) {
        html {
          scroll-behavior: smooth;
        }
      }

      /* Dark mode styles */
      .dark {
        color-scheme: dark;
      }
      
      .dark body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f1629 100%);
        color: #e2e8f0;
      }
      
      .dark header {
        background: rgba(15, 23, 42, 0.95) !important;
        border-color: rgba(51, 65, 85, 0.3) !important;
      }
      
      .dark #mobile-menu {
        background: rgba(15, 23, 42, 0.98) !important;
        border-color: rgba(51, 65, 85, 0.3) !important;
      }
      
      .dark #language-dropdown {
        background: rgba(15, 23, 42, 0.98) !important;
        border-color: rgba(51, 65, 85, 0.3) !important;
      }
      
      .dark .text-gray-900 {
        color: #f1f5f9 !important;
      }
      
      .dark .text-gray-700 {
        color: #cbd5e1 !important;
      }
      
      .dark .text-gray-600 {
        color: #94a3b8 !important;
      }
      
      .dark .text-gray-500 {
        color: #64748b !important;
      }
      
      .dark .text-gray-400 {
        color: #475569 !important;
      }
      
      .dark .bg-gray-50 {
        background-color: rgba(51, 65, 85, 0.5) !important;
      }
      
      .dark .bg-gray-100 {
        background-color: rgba(51, 65, 85, 0.7) !important;
      }
      
      .dark .hover\:bg-gray-50:hover {
        background-color: rgba(51, 65, 85, 0.5) !important;
      }
      
      .dark .hover\:bg-gray-100:hover {
        background-color: rgba(51, 65, 85, 0.7) !important;
      }
      
      .dark .border-gray-200 {
        border-color: rgba(51, 65, 85, 0.3) !important;
      }
      
      .dark .bg-white {
        background-color: rgba(15, 23, 42, 0.9) !important;
      }
      
      .dark .bg-blue-50 {
        background-color: rgba(30, 58, 138, 0.1) !important;
      }
      
      .dark .hover\:bg-blue-50:hover {
        background-color: rgba(30, 58, 138, 0.2) !important;
      }
      
      /* Smooth transitions for theme switching */
      * {
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
      }

      /* Login Modal Styles */
      #login-modal {
        animation: fadeIn 0.1s ease-out;
      }
      
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      
      /* Form focus styles */
      #login-modal input:focus {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
      }
      
      /* Social button hover effects */
      #login-modal button[type="button"]:hover {
        background-color: rgba(0, 0, 0, 0.02);
      }
      
      .dark #login-modal button[type="button"]:hover {
        background-color: rgba(255, 255, 255, 0.05);
      }
      
      /* Responsive modal */
      @media (max-width: 640px) {
        #login-modal .max-w-lg {
          max-width: calc(100vw - 2rem);
        }
      }
    </style>
  </head>
  
  <body class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-cyan-50">
