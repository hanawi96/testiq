                    <span class="text-xs text-gray-500">Spanish</span>
                  </div>
                </a>
              </div>
            </div>
            
            <!-- Login Button -->
            <a href="#" id="login-btn" class="hidden sm:flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 hover:scale-[1.02] font-medium">
