  if (!item.hasDropdown || !item.subItems) return false;
  return item.subItems.some((subItem: any) => {
    if (subItem.href === '/admin') {
      return currentPath === '/admin' || currentPath === '/admin/';
    }
    if (subItem.href === '/admin/users') {
