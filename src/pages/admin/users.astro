---
import AdminLayout from '../../layouts/AdminLayout.astro';
import UsersList from '../../components/admin/UsersList.tsx';
---

<AdminLayout title="Quản lý Users - Admin Panel" description="Quản lý và theo dõi tất cả users trong hệ thống IQ Test">
  <UsersList client:load />
</AdminLayout>

<style>
  /* Custom scrollbar for table */
  :global(.overflow-x-auto::-webkit-scrollbar) {
    height: 8px;
  }
  
  :global(.overflow-x-auto::-webkit-scrollbar-track) {
    background: #f1f5f9;
    border-radius: 4px;
  }
  
  :global(.overflow-x-auto::-webkit-scrollbar-thumb) {
    background: #cbd5e1;
    border-radius: 4px;
  }
  
  :global(.overflow-x-auto::-webkit-scrollbar-thumb:hover) {
    background: #94a3b8;
  }
</style> 